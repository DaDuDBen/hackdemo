# App
APP_NAME=Invoice Escalation System
ENV=development
DEBUG=true

# Backend
API_HOST=0.0.0.0
API_PORT=8000
DATABASE_URL=sqlite:///./invoice_escalation.db
SECRET_KEY=replace-me-with-a-long-random-string

# Scheduler
SCHEDULER_CRON=0 9 * * *
TIMEZONE=UTC

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=collections@example.com
SMTP_USE_TLS=true

# AI provider (LLM-agnostic wrapper)
AI_PROVIDER=openai
AI_MODEL=gpt-4o-mini
AI_API_KEY=replace-with-your-api-key
AI_BASE_URL=https://api.openai.com/v1
